/* pages/sortt/sortt.wxss */
page{
  display: flex;
  height: 100%;
  color: #666666;
  
}
.left-bar{
  width: 188rpx;
  background: #f5f5f5;
  height: 100%
}
.left-bar .item{
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 30rpx;
}
.left-bar .item.active{
  color: #24C7AE;
  background: #ffffff
}
.right-content{
  height: 100%
}
.notice-wrp{
  background: #FFF7EC;
  padding: 25rpx;
  color: #DD9C5A;
  font-size: 26rpx;
}
.right-content .content-wrp{
  margin-top: 40rpx;
}
.right-content .item{
  width: 160rpx;
  height: 240rpx;
  margin-left: 22rpx;
  margin-bottom: 22rpx;
  float: left;
  display: flex;
  flex-flow: column;
  text-align: center
}
.right-content .item image{
  width: 160rpx;
  height: 160rpx;
}
.right-content .item .name{
  font-size: 26rpx;
  margin-top: 30rpx;
}