/* pages/nearby/nearby.wxss */
page{
  display: flex;
  flex-flow: column;
  height: 100%;
}
map{
  width: auto;
  height: auto
}
.opc06{
  opacity: 0.6
}
.nearby-tips{
  padding: 10rpx;
  background: #FCEEC1;
  color: #F4AD49;
  font-size: 28rpx;
  line-height: 58rpx;
  margin: 0 30rpx;
  border-radius: 6rpx;
  border: 1px solid #F4AD49
}
.nearby-tips cover-image{
  width: 34rpx;
  height: 34rpx;
  float: right;
}
.legend{
  height: 130rpx;
  background: #ffffff;
  border-radius: 6rpx;
  box-shadow: 0px 4px 8px #e5e5e5;
  margin: 20rpx 30rpx 30rpx 20rpx
}
.cur-loc-info{
  background: #ffffff;
  height: 130rpx;
  justify-content: space-between
}
.legend .legend-item{
  justify-content: center;
  font-size: 24rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}
.legend .legend-item cover-image{
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 10rpx
}
.cur-loc-info{
  padding:0 20rpx;
}
.cur-loc-info image{
  width: 84rpx;
  height: 84rpx;
  margin-right: 40rpx;
}
.cur-loc-info .name{
  font-size: 36rpx;
}
.cur-loc-info .desc{
  font-size: 32rpx;
  color: #999999;
  margin-top: 10rpx;
}
.list-mode{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  font-size: 24rpx;
  flex-flow: column;
  justify-content: center;
  border: 1px solid #666666
}